{{#extends "base"}}
{{#block "content"}}

<table class="table">
    <thead>
        <tr>
            <td>Brand</td>
            <td>Model</td>
            <td>State of Watch</td>
            <td>Price</td>
            <td>Date of Watch</td>
        </tr>
    </thead>
    <tbody>
        {{#each watch}}
        <tr>
            <td>{{this.watch.brand}}</td>
            <td>{{this.watch.model}}</td>
            <td>{{this.watch.state_of_watch}}</td>
            <td>{{this.watch.price}}</td>
            <td>{{this.watch.date_of_watch}}</td>
            <td>
                <a href="/watch/{{this.watch_id}}/delete" class="btn btn-danger btn-sm">Delete</a>
                <a href="/watch/{{this.watch_id}}/update" class="btn btn-success btn-sm">Update</a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

{{/block}}
{{/extends}}